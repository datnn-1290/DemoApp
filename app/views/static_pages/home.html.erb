<div class="center jumbotron">
  <h1><%= t ".welcome" %></h1>
  <h2>
  <% if logged_in? %>
    <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="entry_form">
        <%= render 'shared/entry_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>My Feed</h3>
      <%= render 'shared/feed' %>
    </div>
    </div>
  </h2>
  <% else %>
  <%= link_to t(".btn_signup"), signup_path, class: "btn btn-lg btn-primary" %>
  <% end %>
</div>
